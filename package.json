    "chalk": "^4.0.0",
    "commander": "^5.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-ejs-layouts": "^2.5.0",
    "express-session": "^1.17.0",
    "faker": "^4.1.0",
    "helmet": "^3.22.0",
    "log4js": "^6.1.2",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "pkg-install": "^1.0.0",
