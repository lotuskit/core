{
  "name": "lotuskit",
  "version": "1.0.0",
  "description": "A programmable turnkey chat server, flexible and open-source",
  "main": "lotuskit.js",
  "scripts": {
    "start": "ts-node build/lotuskit",
    "start-prod": "node lotuskit.js",
    "webpack": "rm -rf build && webpack --config webpack.config.js",
