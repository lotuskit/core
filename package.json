{
  "name": "lotuskit",
  "version": "1.0.0",
  "description": "An open-source turnkey chat server to integrate in your projects",
  "main": "lotuskit.js",
  "scripts": {
    "start": "ts-node dist/lotuskit",
    "webpack": "rm -rf dist && webpack --config webpack.config.js",
    "test": "cross-env NODE_ENV=test jest --testTimeout=10000 --runInBand"
  },
  "author": "Pierre Avinain",
  "license": "ISC",
  "dependencies": {
    "ajv": "^6.12.0",
    "bluebird": "^3.7.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "log4js": "^6.1.2",
    "redis": "^3.0.2",
    "request": "^2.88.2",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.30",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.3",
    "@types/helmet": "0.0.45",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.3",
    "@types/redis": "^2.8.17",
    "@types/request": "^2.48.4",
    "@types/socket.io": "^2.1.4",
    "@types/supertest": "^2.0.8",
    "jest": "^25.2.3",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/log/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  }
}
